{% extends 'base.html.twig' %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-sm-8">
                <form method="post" action="/send_payment">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Transaction Description</label>
                        <input type="text" class="form-control" name="descriptor" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter Description">
                        <small id="emailHelp" class="form-text text-muted">Transaction Descriptor.</small>
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlSelect1">Payment Method</label>
                        <select class="form-control" id="exampleFormControlSelect1" name="payment_method">
                            {% for key, value in payment_methods %}
                                <option value="{{ key }}">{{ value }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
            <div class="col-sm-4">
                One of three columns
            </div>
        </div>
    </div>
{% endblock %}